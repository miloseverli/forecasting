{
    "compilerOptions": {
        "lib": [
            "es2023"
        ],
        "module": "nodenext",
        "target": "es2017",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "strictPropertyInitialization": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        // "outDir": "dist",
        "sourceMap": true
    },
    "include": [
        "src/**/*"
    ]
}